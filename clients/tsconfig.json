{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "*": ["types/*"],
      "@/*": ["*"]
    },
    "target": "es5",
    "lib": ["dom", "es5", "es6"],
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": ["src", "webpack.config.js"]
}
